{
  "metrics": {
    "memory_usage": {
      "namespace": "engine",
      "name": "memory.usage_mb",
      "description": "Current memory usage in megabytes",
      "metric_type": "gauge",
      "unit": "megabytes"
    },
    "memory_peak": {
      "namespace": "engine",
      "name": "memory.peak_mb",
      "description": "Peak memory usage since start in megabytes",
      "metric_type": "gauge",
      "unit": "megabytes"
    },
    "memory_allocation_size_histogram": {
      "namespace": "engine",
      "name": "memory.allocation_size_histogram",
      "description": "Distribution of allocation sizes",
      "metric_type": "histogram",
      "unit": "bytes",
      "buckets": [1024, 4096, 16384, 65536, 262144, 1048576, 4194304, 16777216, 67108864]
    },
    "memory_lifetime_allocated_mb": {
      "namespace": "engine",
      "name": "memory.lifetime_allocated_mb",
      "description": "Total bytes allocated during application lifetime in megabytes",
      "metric_type": "gauge",
      "unit": "megabytes"
    },
    "memory_lifetime_deallocated_mb": {
      "namespace": "engine",
      "name": "memory.lifetime_deallocated_mb",
      "description": "Total bytes deallocated during application lifetime in megabytes",
      "metric_type": "gauge",
      "unit": "megabytes"
    },
    "memory_large_allocations": {
      "namespace": "engine",
      "name": "memory.large_allocations",
      "description": "Number of large allocations (â‰¥1MB)",
      "metric_type": "gauge",
      "labels": {
        "category": "large",
        "threshold": "1MB"
      }
    },
    "memory_medium_allocations": {
      "namespace": "engine",
      "name": "memory.medium_allocations",
      "description": "Number of medium allocations (1KB-1MB)",
      "metric_type": "gauge",
      "labels": {
        "category": "medium",
        "threshold": "1KB-1MB"
      }
    },
    "memory_small_allocations": {
      "namespace": "engine",
      "name": "memory.small_allocations",
      "description": "Number of small allocations (<1KB)",
      "metric_type": "gauge",
      "labels": {
        "category": "small",
        "threshold": "<1KB"
      }
    },
    "memory_fragmentation_ratio": {
      "namespace": "engine",
      "name": "memory.fragmentation_ratio",
      "description": "Memory fragmentation ratio (0.0 = no fragmentation, 1.0 = high fragmentation)",
      "metric_type": "gauge",
      "unit": "ratio"
    },
    "memory_allocation_efficiency": {
      "namespace": "engine",
      "name": "memory.allocation_efficiency",
      "description": "Memory allocation efficiency as percentage",
      "metric_type": "gauge",
      "unit": "percentage"
    },
    "memory_reallocation_rate": {
      "namespace": "engine",
      "name": "memory.reallocation_rate",
      "description": "Rate of reallocations as percentage of total allocations",
      "metric_type": "gauge",
      "unit": "percentage"
    },
    "memory_utilization_histogram": {
      "namespace": "engine",
      "name": "memory.utilization_histogram",
      "description": "Distribution of memory utilization levels",
      "metric_type": "histogram",
      "unit": "megabytes",
      "buckets": [1, 5, 10, 25, 50, 100, 250, 500, 1000, 2000, 4000]
    }
  }
}
